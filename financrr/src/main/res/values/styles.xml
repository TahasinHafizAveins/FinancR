<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ProjectIcon">
        <item name="android:contentDescription">@string/update</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="TIStyle">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/nonClickable</item>
        <item name="colorControlHighlight">@color/nonClickable</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TaskTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
</resources>